<form id="form" action="/login" method="POST" id="form">
  <h2>Login</h2>

  <!-- <label for="username">Username</label>-->
  <input placeholder="Username" type="text" class="input-login" id="username" name="username" required>

  <!-- <label for="password">Password</label>-->
  <input placeholder="Password" type="password" class="input-login" name="password" id="password" required
    minlength="5">

  {{#if errorMessage }}
  <div class="error-message">{{ errorMessage }}</div>
  {{/if}}

  <button class="btn-login">Sign in</button>

  <p class="account-message">
    Don't have an account? <a href="/signup">Sign up</a>
  </p>
</form>